<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/dbs"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingTop="80dp"
            android:text="@string/dbs_name"
            android:textAlignment="center"
            android:textFontWeight="30"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="204dp"
            android:layout_height="254dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dbs" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F0F4F8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ocbc"
            android:layout_width="515dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingTop="80dp"
            android:text="@string/ocbc_name"
            android:textAlignment="center"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="233dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ocbc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#C6D5E8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/uob"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="80dp"
            android:text="@string/uob_name"
            android:textAlignment="center"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="241dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/uob" />
    </LinearLayout>

</LinearLayout>